<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_details_movements_inflow">
            <t t-call="report.html_container">
                <t t-call="report.external_layout">

                    <div class="page">

                    	<div class="page-header">
                    	    <h3>Details Movements Inflow</h3>
                    	</div>


                        <t t-foreach="data" t-as="x">

                        	<table class="table">
                        	    <thead>
                        	    	<tr>
                        	        	<p>Month: <t t-esc="x['name']"></t></p>
                        	        </tr>

                        	        <tr>
                        	            <th>Employee</th>
                        	            <th>Amount</th>
                        	            <th>Description</th>
                        	            <th>Date</th>
                        	        </tr>
                        	    </thead>
                        	    
                        	    <tbody>              	        
                    	        	<t t-foreach="x['movements_months']" t-as="o">
                    	        		<tr>
                        	        		<td>
	                        	                <t t-esc="o.employee.name"/>
	                        	            </td>

                        	        		<td>
	                        	                <t t-esc="o.amount"/>
	                        	            </td>

                        	        		<td>
	                        	                <t t-esc="o.description"/>
	                        	            </td>

											<td>
											    <t t-esc="o.created_date"/>
											</td>
	                        	        </tr>
                    	        		
                    	        	</t>

                        	    </tbody> 

<!--                         	    <tfoot>
                        	        <tr>
                        	            <td>
                        	            </td>

                        	            <td>

                        	            </td>
                        	        </tr>

                        	    </tfoot> -->

                        	</table>
                        </t>
                    </div>
                </t>
            </t>
        </template>
    </data>
</odoo>
