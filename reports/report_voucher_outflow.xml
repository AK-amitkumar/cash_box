<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <template id="external_layout_header_customized" inherit_id="report.external_layout_header">
            <xpath expr="//div[@class='header']" position="replace">
                <div class="header">
                    <div class="row">
                        <div class="col-lg-12 pull-right" id="slogan" t-field="company.rml_header1"/>
                    </div>
                    <br></br>
                    <div class="row" id="report-container">
                        <div class="col-lg-8" id="logo">
                            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                                 style="max-height: 60px;"/>
                            <div class="col-lg-4" id="report-phone">
                                <span t-field="company.phone"/>
                            </div>
                            <div class="row">
                                <div class="col-xs-6" id="report-name">
                                    <span t-field="company.name"/>
                                </div>
                                <div class="col-xs-6" id="report-email">
                                    <span t-field="company.email"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>


        <template id="report_voucher_outflow">
            <t t-call="report.html_container">
                <t t-foreach="docs" t-as="o">

                    <t t-call="report.external_layout">

                        <div class="page">
                            <div class="page-header">
                                <br></br>
                                <br></br>
                                <br></br>
                                <h3 id="type_voucher">Comprobante de Salida</h3>
                            </div>
                            <table class="table table-condensed">
                                <thead>
                                    <th colspan="6" id="data_voucher">Datos del comprobante</th>
                                </thead>
                                <tbody>
                                    <tr class="success">
                                        <td>Employee:</td>
                                        <td>
                                            <t t-esc="o.employee.name"/>
                                        </td>
                                    </tr>
                                    <tr class="warning">
                                        <td>Amount:</td>
                                        <td>
                                            <t t-esc="o.amount"/>
                                            <span t-field="o.currency_id.symbol"/>
                                        </td>
                                    </tr>
                                    <tr class="active">
                                        <td>Description:</td>
                                        <td>
                                            <t t-esc="o.description"/>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>Date:</td>
                                        <td>
                                            <t t-esc="o.create_date"/>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>

        <template id="external_layout_footer_customized" inherit_id="report.external_layout_footer">
            <xpath expr="//div[@class='footer']" position="replace">
                <div class="footer">
                    <div class="text-center" id="footer" style="border-top: 1px solid black;">
                        <ul t-if="not company.custom_footer" class="list-inline">

                            <li t-if="company.fax and company.phone">&amp;bull;</li>
                            <li t-if="company.fax">Fax:
                                <span t-field="company.fax"/>
                            </li>

                            <li t-if="company.website">&amp;bull;</li>
                            <li t-if="company.website">
                                <span t-field="company.website"/>
                            </li>
                        </ul>

                        <t t-if="company.custom_footer">
                            <span t-raw="company.rml_footer"/>
                        </t>
                    </div>
                </div>
            </xpath>
        </template>

        <template id="internal_layout">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>

            <div class="header">
                <div class="row">
                    <div class="col-xs-3">
                        <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                    </div>
                    <div class="col-xs-2 col-xs-offset-2 text-center">
                        <span t-esc="company.name"/>
                    </div>
                    <div class="col-xs-2 col-xs-offset-3 text-right">
                        <ul class="list-inline">
                            <li>
                                <span class="page"/>
                            </li>
                            <li>/</li>
                            <li>
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <t t-raw="0"/>
        </template>

        <report
                id="button_report_voucher_outflow"
                model="cash_box.outflow_seat"
                string="Print Voucher"
                report_type="qweb-pdf"
                attachment_use="False"
                name="cash_box.report_voucher_outflow"
                file="cash_box.report_voucher_outflow"
        />
    </data>
</odoo>